@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.AntiForgeryToken()
<!--page banner end-->
<!--主要內容區 start-->
<div class="page_banner" style="background: url('@Model.BannerImage');background-position: top center;background-size: cover;">
    <!--建議尺寸1920*470px-->
    @*<div class="container">
            <div class="page_title" data-sr="enter top over 1.5s">@Model.Title</div>
        </div>*@
</div>
<!--page banner end-->
<!--main content start-->
<div id="content" class="page_content">
    <div class="container">

        <div class="content_con">

            <div class="con_one">

                <div class="page_top" data-sr="enter top over 1.5s">
                    <a href="#;return false;" title="主要內容區" accesskey="C" id="main-content">:::</a> <!--英文<a href="#;return false;" title="Main content area" accesskey="C">:::</a>-->
                    <a href="@Url.Action("Index","Home")" title="@Common.GetLangText("回首頁")"><i class="fas fa-home" aria-hidden="true"></i><span class="sr-only">@Common.GetLangText("回首頁")</span></a> <i class="fa fa-angle-right" aria-hidden="true"></i>
                    <span class="active">@ViewBag.Title</span>
                </div>

                <h2 >@ViewBag.Title</h2>

                <div class="page_con">

                    <div class="con_one">

                        <div class="con_font">
                            @Html.Raw(ViewBag.Page404HtmlContent)
                        </div>

                    </div>
                </div>

            </div>


        </div>

    </div>
</div>
