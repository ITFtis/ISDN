                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.UploadFileID != null)
                                        {
                                            var idx = 0;
                                            foreach (var sel in Model.UploadFileID)
                                            {@Html.HiddenFor(Model => Model.UploadFileName[idx])
