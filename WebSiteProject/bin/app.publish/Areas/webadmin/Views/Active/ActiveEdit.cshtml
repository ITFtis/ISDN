                                @Html.EditorFor(model => model.Way, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">報名網址</div>
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">
                                @Html.EditorFor(model => model.WebSite, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">報名查詢</div>
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">
                                @Html.EditorFor(model => model.Search, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 col-xs-12 bg-grey_1 search_item">報名日期</div>
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">
                                <div class="input-group input-large" style="float:left">
                                    <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                        @Html.EditorFor(model => model.StSignDateStr, new { htmlAttributes = new { @class = "form-control", placeholder = "開始日期" } })
                                    </div>
                                    <span class="input-group-addon"> to </span>
                                    <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                        @Html.EditorFor(model => model.EdSignDateStr, new { htmlAttributes = new { @class = "form-control", placeholder = "結束日期" } })
                                    </div>
                                </div>
                                <div class="" style="float:left;padding-left:5px;">
                                    <button type="button" class="btn blue" id="btn_clear">清空</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 search_item">聯絡人</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white">
                                <label class="inline-block">
                                    姓名 @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control input-small inline-block" } })
                                </label>
                                &nbsp;&nbsp;&nbsp;
                                <label class="inline-block">
                                    電話 @Html.EditorFor(model => model.ContactMail, new { htmlAttributes = new { @class = "form-control input-small inline-block" } })
                                </label>
                                &nbsp;&nbsp;&nbsp;
                                <label class="inline-block">
                                    傳真 @Html.EditorFor(model => model.ContactFax, new { htmlAttributes = new { @class = "form-control input-small inline-block" } })
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 search_item">附件檔案</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white language_set">
                                <div class="display_inline margin_bottom">
                                    <button class="btn green-meadow" id="btn_add" type="button">新增 <i class="fa fa-plus"></i></button>
                                    <button class="btn red" id="btn_del" type="button">刪除 <i class="glyphicon glyphicon-trash"></i></button>
                                </div>

                                <!--table start-->
                                <table class="table table-bordered nomarginbottom"
                                       border="0" cellspacing="0" cellpadding="0" id="table_selContent">
